<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/white_card">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <!-- Additional Images Overlaying toggleImage -->
        <ImageView
            android:id="@+id/toggleImage"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/front_model" />

        <ImageView
            android:id="@+id/right_hip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-20dp"
            android:translationX="-40dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_hip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-20dp"
            android:translationX="40dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_thigh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="50dp"
            android:translationX="-25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_thigh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="50dp"
            android:translationX="25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_biceps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-100dp"
            android:translationX="65dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_triceps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/clickable_screw"
            android:translationX="65dp"
            android:translationY="-100dp" />

        <ImageView
            android:id="@+id/right_biceps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-100dp"
            android:translationX="-65dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_pecs"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-140dp"
            android:translationX="-25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_pecs"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-140dp"
            android:translationX="25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_oblique"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-80dp"
            android:translationX="-30dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_oblique"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-80dp"
            android:translationX="30dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/abs"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-50dp"
            android:translationX="0dp"
            android:src="@drawable/clickable_screw" />


        <ImageView
            android:id="@+id/left_triceps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:translationY="-100dp"
            android:translationX="-65dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_deltoids"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-150dp"
            android:visibility="gone"
            android:translationX="-65dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_deltoids"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-150dp"
            android:visibility="gone"
            android:translationX="65dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_traps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-180dp"
            android:visibility="gone"
            android:translationX="-25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_traps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="-180dp"
            android:visibility="gone"
            android:translationX="25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_lats"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:translationY="-100dp"
            android:translationX="-25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_lats"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:translationY="-100dp"
            android:translationX="25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_glutes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:translationY="-10dp"
            android:translationX="-20dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_glutes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:translationY="-10dp"
            android:translationX="20dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_hamstring"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:translationY="60dp"
            android:translationX="-25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_hamstrings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:translationY="60dp"
            android:translationX="25dp"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/left_calves"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="140dp"
            android:translationX="-30dp"
            android:visibility="gone"
            android:src="@drawable/clickable_screw" />

        <ImageView
            android:id="@+id/right_calves"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:translationY="140dp"
            android:translationX="30dp"
            android:visibility="gone"
            android:src="@drawable/clickable_screw" />

        <LinearLayout
            android:id="@+id/changeModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_curved_button"
            android:gravity="center"
            android:paddingHorizontal="25dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/selected_muscle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="FRONT"
                android:textColor="#FFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- LinearLayout for TextViews in the top-right corner -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:src="@drawable/baseline_close_24"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:text="Selected Muscle"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
