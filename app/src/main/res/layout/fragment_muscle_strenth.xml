            android:layout_height="68dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/right_traps" />

        <ImageView
            android:id="@+id/left_traps"
            android:layout_width="45dp"
            android:layout_height="68dp"
