        <ImageView
            android:id="@+id/right_glutes"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/right_glutes" />

        <ImageView
            android:id="@+id/left_glutes"
